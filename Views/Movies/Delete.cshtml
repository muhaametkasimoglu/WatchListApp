@model WatchlistApp.Models.Movie

@{
    ViewData["Title"] = "Sil";
}

<div class="container mt-4">
    <h1 class="page-title text-danger">Kaydı Sil</h1>
    <p class="page-subtitle">Bu filmi/diziyi gerçekten silmek istiyor musun?</p>

    <div class="movie-form-card">
        <dl class="row">
            <dt class="col-sm-3">Başlık</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">Tür</dt>
            <dd class="col-sm-9">@Model.Genre</dd>

            <dt class="col-sm-3">Yapım Yılı</dt>
            <dd class="col-sm-9">@Model.ReleaseYear</dd>

            <dt class="col-sm-3">Puan</dt>
            <dd class="col-sm-9">@Model.Rating</dd>

            <dt class="col-sm-3">Durum</dt>
            <dd class="col-sm-9">
                @(Model.IsWatched ? "İzlendi" : "İzlenecek")
            </dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>
                <button type="submit" class="btn btn-danger">Evet, sil</button>
            </div>
        </form>
    </div>
</div>
